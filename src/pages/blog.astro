---
import Layout from '../layouts/Layout.astro';
import { Navbar } from '../components/Navbar';
import { Footer } from '../components/Footer';
import { CTA } from '../components/CTA';
import { blogs } from '../data/blogs';
import { ArrowRight, Calendar, Clock, User } from 'lucide-react';
import { Image } from 'astro:assets';

---

<Layout title="Blog | Aizaz Studio">
  <div class="min-h-screen bg-black text-white selection:bg-primary-500/30 selection:text-primary-200 overflow-x-hidden">
    <Navbar client:load />
    
    <main class="pt-32 pb-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        {/* Header */}
        <div class="text-center mb-20">
          <div class="text-primary-500 font-bold tracking-widest text-sm mb-4 uppercase">Our Thoughts</div>
          <h1 class="text-4xl md:text-6xl font-display font-bold text-white mb-6 leading-tight">
            Insights & <br />
            <span class="text-zinc-500">Perspectives</span>
          </h1>
          <p class="text-xl text-zinc-400 max-w-2xl mx-auto">
            Deep dives into engineering, design, and the future of digital products.
          </p>
        </div>

        {/* Blog Grid */}
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {blogs.map((blog) => (
            <article class="group relative flex flex-col h-full bg-zinc-900/30 border border-white/5 rounded-2xl overflow-hidden hover:border-primary-500/30 transition-all duration-500 hover:-translate-y-1">
              {/* Image */}
              <div class="aspect-video overflow-hidden">
                <Image 
                  src={blog.image} 
                  alt={blog.title}
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                />
              </div>
              
              {/* Content */}
              <div class="p-8 flex flex-col flex-grow">
                <div class="flex items-center gap-4 text-xs text-zinc-500 mb-4 font-medium">
                  <span class="text-primary-400">{blog.category}</span>
                  <span>â€¢</span>
                  <div class="flex items-center gap-1">
                    <Calendar size={12} />
                    {blog.date}
                  </div>
                </div>

                <h2 class="text-xl font-bold text-white mb-3 group-hover:text-primary-400 transition-colors line-clamp-2">
                  <a href={`/blog/${blog.slug}`}>
                    {blog.title}
                  </a>
                </h2>
                
                <p class="text-zinc-400 text-sm leading-relaxed mb-6 line-clamp-3 flex-grow">
                  {blog.excerpt}
                </p>

                <div class="flex items-center justify-between pt-6 border-t border-white/5 mt-auto">
                  <div class="flex items-center gap-2 text-xs text-zinc-500">
                    <User size={12} />
                    {blog.author}
                  </div>
                  <div class="flex items-center gap-2 text-xs text-zinc-500">
                    <Clock size={12} />
                    {blog.readTime}
                  </div>
                </div>
              </div>
            </article>
          ))}
        </div>

      </div>
      
      <div class="mt-32">
        <CTA client:visible />
      </div>
    </main>
    <Footer client:visible />
  </div>
</Layout>
